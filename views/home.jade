extends layout

block content
  h1 Winterplace Park Ultimate
  br
  p.lead
    h2 Who's playing?
    br
  section.col-xs-offset-3
    ul.list-group.col-xs-10
      for user in profiles
        .list-group-item.col-xs-10
            .col-xs-4.pull-left
              h4= user.profile.name
            .pull-right
              #status.btn-group
                button.btn.btn-default(type='button') Playing
                button.btn.btn-default(type='button') Not Playing

  .row
  form(method='POST' action='/notify')
    .form-group
      button.btn.btn-primary(type='submit')
        i.fa.fa-unlock-alt
        | Notify


