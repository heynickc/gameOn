  br
  p.lead
    h2 Who's playing?
    br
  .row
    .col-xs-12.col-sm-offset-3.col-sm-6
      ul.list-group
        for user in profiles
          .list-group-item
              .col-xs-6.col-sm-6
                h4.resizeable= user.profile.name
              .col-xs-4.col-xs-offset-2.col-sm-4.col-sm-offset-2
                .pull-right
                  i.fa.fa-thumbs-o-up.fa-3x
                  i.fa.fa-thumbs-o-down.fa-3x
              .clearfix
